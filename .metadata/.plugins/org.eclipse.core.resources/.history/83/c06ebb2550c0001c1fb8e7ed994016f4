import java.util.Arrays;
import java.util.Scanner;

public class Testjava {

	public static void main(String[] args) {
		
		int sum = 0, i;
		
		for (i = 1; i <= 100 ; i ++ ) {
				sum += i;
		System.out.println("1 ~ 100까지 합 = " + sum);
		
						}
		
		System.out.println("평균값 = " + sum/100);
		
	}
}